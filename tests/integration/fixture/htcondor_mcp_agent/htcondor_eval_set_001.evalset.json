{
  "eval_set_id": "htcondor_mcp_eval_v1",
  "eval_set_name": "HTCondor MCP Agent Evaluation Set",
  "description": "Comprehensive evaluation set for HTCondor MCP agent covering job management, status queries, and job submission",
  "version": "1.0.0",
  "eval_cases": [
    {
      "name": "Basic Job Listing",
      "description": "Test basic job listing functionality without filters",
      "data": [
        {
          "query": "Show me all jobs",
          "expected_tool_use": [
            {
              "tool_name": "list_jobs",
              "tool_input": {
                "owner": null,
                "status": null,
                "limit": 10
              }
            }
          ],
          "expected_response_substrings": [
            "Jobs in the queue",
            "ClusterId",
            "ProcId", 
            "Status",
            "Owner"
          ]
        }
      ]
    },
    {
      "name": "Job Listing by Owner",
      "description": "Test job listing filtered by specific user",
      "data": [
        {
          "query": "Show jobs for user alice",
          "expected_tool_use": [
            {
              "tool_name": "list_jobs",
              "tool_input": {
                "owner": "alice",
                "status": null,
                "limit": 10
              }
            }
          ],
          "expected_response_substrings": [
            "Jobs for user alice",
            "alice"
          ]
        }
      ]
    },
    {
      "name": "Job Status Query",
      "description": "Test getting detailed status for a specific job",
      "data": [
        {
          "query": "What's the status of job 1234567?",
          "expected_tool_use": [
            {
              "tool_name": "get_job_status",
              "tool_input": {
                "cluster_id": 1234567
              }
            }
          ],
          "expected_response_substrings": [
            "Job 1234567",
            "status"
          ]
        }
      ]
    },
    {
      "name": "Job Submission",
      "description": "Test job submission functionality",
      "data": [
        {
          "query": "Submit a job to run /bin/sleep 100",
          "expected_tool_use": [
            {
              "tool_name": "submit_job",
              "tool_input": {
                "submit_description": {
                  "executable": "/bin/sleep",
                  "arguments": "100"
                }
              }
            }
          ],
          "expected_response_substrings": [
            "Job submitted",
            "ClusterId"
          ]
        }
      ]
    },
    {
      "name": "Job History Query",
      "description": "Test job history retrieval",
      "data": [
        {
          "query": "Show me the history for job 1234567",
          "expected_tool_use": [
            {
              "tool_name": "get_job_history",
              "tool_input": {
                "cluster_id": 1234567,
                "limit": 50
              }
            }
          ],
          "expected_response_substrings": [
            "history",
            "events",
            "1234567"
          ]
        }
      ]
    },
    {
      "name": "System Overview",
      "description": "Test complex query combining multiple tools",
      "data": [
        {
          "query": "Give me a complete overview of the HTCondor system including jobs, machines, and resources",
          "expected_tool_use": [
            {
              "tool_name": "get_pool_status",
              "tool_input": {}
            },
            {
              "tool_name": "get_system_load",
              "tool_input": {}
            },
            {
              "tool_name": "get_queue_stats",
              "tool_input": {}
            }
          ],
          "expected_response_substrings": [
            "overview",
            "system",
            "jobs",
            "machines",
            "resources"
          ]
        }
      ]
    }
  ]
} 